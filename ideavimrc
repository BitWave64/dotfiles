set hlsearch
set highlightedyank
set ignorecase
set smartcase
set visualbell
set number
set clipboard+=unnamed

let mapleader=" "

" Define list of config files at the top
let g:config_files = ['~/.config/dotfiles/actionlist.vim', '~/.ideavimrc']
nnoremap <leader>co :for f in g:config_files \| execute 'edit ' . f \| endfor<CR>
nnoremap <leader>cq :for f in g:config_files \| execute 'bdelete ' . f \| endfor<CR>
noremap  <leader>cs :source ~/.ideavimrc<cr>

""" Tools
nnoremap <leader>to :action ActivateTerminalToolWindow<CR>
" Open terminal where file is
nnoremap <leader>t :action Terminal.OpenInTerminal<CR>

""" Source Navigation
nmap [[ <Action>(Back)
nmap ]] <Action>(Forward)

nmap [m <Action>(MethodUp)
nmap ]m <Action>(MethodDown)

nmap ]e <Action>(GotoNextError)
nmap [e <Action>(GotoPreviousError)


""" Search
nmap <leader><leader> :nohl<CR>
nmap <leader>sa <Action>(SearchEverywhere)
nmap <leader>sc <Action>(SearchClasses)

""" Editor navigation
nmap H <Action>(PreviousTab)
nmap L <Action>(NextTab)
nmap J <Action>(NextSplitter)
nmap K <Action>(PrevSplitter)

""" Code Editing
" Format file
nmap <leader>cf <Action>(ReformatCode)

""" Run
nmap <leader>rr <Action>(Run)
nmap <leader>rd <Action>(Debug)
nmap <leader>rq <Action>(Stop)
